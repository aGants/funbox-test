mixin pack(number, text, number, present)
  .container
    .main-block-pack.number
      p.main-block-pack__description Сказочное заморское яство
      h2.main-block-pack__title Нямушка
      p(class='main-block-pack__with')='c '+text
      span(class='main-block-pack__number')=number+' порций'
      p(class='main-block-pack__present')=present
      svg()
    span.main-block__text Чего сидишь? Порадуй котэ, <a>купи.</a>

.main-block
  +pack(1, 'фуагра', '10', 'мышь в подарок')
  +pack(2, 'рыбой', '40', '2 мыши в подарок')
  +pack(3, 'курой', '100', '5 мышей в подарок заказчик доволен')

  
  